<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kris.moodco.ChooseMoodActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:text="Your Mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnHappy"
        android:text="happy"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tvTitle"
        />

    <TextView
        android:id="@+id/tvLabel"
        android:text="Happy Score: "
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/btnHappy"
        />

    <TextView
        android:id="@+id/tvScore"
        android:text="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/btnHappy"
        android:layout_toRightOf="@+id/tvLabel"
        />

    <TextView
        android:id="@+id/tvLabel2"
        android:text="Sad Score: "
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tvLabel"
        />

    <TextView
        android:id="@+id/tvScore2"
        android:text="2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tvScore"
        android:layout_toRightOf="@+id/tvLabel"
        />

    <TextView
        android:id="@+id/tvLabel3"
        android:text="Angry Score: "
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tvLabel2"
        />

    <TextView
        android:id="@+id/tvScore3"
        android:text="3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tvScore2"
        android:layout_toRightOf="@+id/tvLabel3"
        />

    <Button
        android:id="@+id/btnSad"
        android:text="sad"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_toRightOf="@+id/btnHappy"
        />

    <Button
        android:id="@+id/btnAngry"
        android:text="angry"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_toRightOf="@+id/btnSad"
        />


</RelativeLayout>
